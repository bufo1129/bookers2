
<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to book_path(book.id) do %>
        <p><%= image_tag book.user.get_profile_image(100,100) %></p>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
        <p><%= book.title %></p>
        <% end %>
      </td>
      <td>
        <p><%= book.body %></p>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
