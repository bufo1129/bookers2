
<h2>Users</h2>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to user_path(user.id) do %>
        <p><%= image_tag user.get_profile_image(100,100) %></p>
        <% end %>
      </td>
      <td>
        <p><%= user.name %></p>
      </td>
      <td>
        <p><%= link_to "Show", user_path(user.id) %></p>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
