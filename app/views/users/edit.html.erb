<h2>User Info</h2>
<%= form_with model: @user do |f| %>
  <label for="user_name">Name</label>
  <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"name"%>
  <label for="user_image">Image</label>
  <%= f.file_field :profile_image, placeholder: "user_image", accept: "image/*" %>
  <label for="user_introduction">Introduction</label>
  <%= f.text_area :body, autofocus: true, id:"user_introduction", placeholder:"introduction"%>
  <%= f.submit "変更を保存" %>
<% end %>